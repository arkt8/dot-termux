let &runtimepath.=",~/.config/nvim/ftwiz"
:set mouse=a nomousehide 

set timeoutlen=3000

set autoindent
set smartindent
set nowrap
set wildmenu
set noexpandtab
set hlsearch           " Hilight search matched
set tabstop=2          " columns used on tab (default=8)
set shiftwidth=2       " columns used on softwidth
set softtabstop=2
set background=dark
set noswapfile nobackup
set clipboard+=unnamedplus
set incsearch ignorecase smartcase hlsearch

colorscheme term
